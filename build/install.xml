      <target name="upgrade:jboss:init" unless="install.running"
	      depends="
	      upgrade:jboss:init:prep,
	      upgrade:jboss:readers:bda,
	      upgrade:jboss:readers:custom
	      ">
	      <properties-print
		      properties.list="${read.properties.list}"
